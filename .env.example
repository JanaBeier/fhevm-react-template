# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Sepolia Testnet RPC URL
# Get from: Alchemy (https://alchemy.com) or Infura (https://infura.io)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Ethereum Mainnet RPC URL (for production)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Private Key (DO NOT commit your real private key!)
# WARNING: Never share or commit this value
# Remove the '0x' prefix if present
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Deployer Address (Optional - for verification)
DEPLOYER_ADDRESS=0x0000000000000000000000000000000000000000

# Emergency Pauser Address
# Address that can pause contract in emergency situations
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Admin/Owner Address (Optional - for role-based access)
ADMIN_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# VERIFICATION & MONITORING
# ===========================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Codecov Token (for coverage reports)
# Get from: https://codecov.io
CODECOV_TOKEN=your_codecov_token_here

# ===========================================
# GAS & PERFORMANCE OPTIMIZATION
# ===========================================

# Gas Reporter Configuration
REPORT_GAS=false

# CoinMarketCap API Key (for gas price in USD)
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas Price (in Gwei) - Optional manual override
# GAS_PRICE=50

# Gas Limit - Optional manual override
# GAS_LIMIT=8000000

# ===========================================
# COMPILER OPTIMIZATION
# ===========================================

# Solidity Optimizer Settings
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200

# Enable Solidity via-IR optimization (experimental)
# VIA_IR=false

# ===========================================
# TESTING CONFIGURATION
# ===========================================

# Fork Testing (Optional)
# FORK_ENABLED=false
# FORK_BLOCK_NUMBER=latest

# Test Timeout (milliseconds)
TEST_TIMEOUT=200000

# ===========================================
# CI/CD CONFIGURATION
# ===========================================

# CI Environment Detection
CI=false

# Skip Tests (for quick builds)
SKIP_TESTS=false

# Skip Coverage (for faster CI)
SKIP_COVERAGE=false

# ===========================================
# SECURITY SCANNING
# ===========================================

# Enable Slither Analysis
ENABLE_SLITHER=false

# Enable Mythril Analysis
ENABLE_MYTHRIL=false

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Deployment Network (sepolia, mainnet, localhost)
DEPLOYMENT_NETWORK=sepolia

# Enable Contract Verification After Deploy
AUTO_VERIFY=true

# Save Deployment Info
SAVE_DEPLOYMENT_INFO=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development Server Port
DEV_PORT=3000

# Enable Debug Logs
DEBUG=false

# Enable Verbose Logging
VERBOSE=false

# ===========================================
# NOTES & SECURITY BEST PRACTICES
# ===========================================
#
# 1. NEVER commit .env file to version control
# 2. Copy this file to .env: cp .env.example .env
# 3. Fill in actual values in .env file
# 4. Keep private keys secure and never share
# 5. Use different keys for testnet and mainnet
# 6. Rotate keys regularly for enhanced security
# 7. Use hardware wallets for mainnet deployments
# 8. Enable 2FA on all provider accounts
# 9. Monitor deployed contracts for unusual activity
# 10. Test thoroughly on testnet before mainnet
#
